<h1>
  Contact list
</h1>

<a href="/new_contact_form">
  Add a new contact
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      User
    </th>

    <th>
      Main contact
    </th>

    <th>
      City
    </th>

    <th>
      Job
    </th>

    <th>
      Birthday
    </th>

    <th>
      Note
    </th>

    <th>
      Name
    </th>

    <th>
      Last name
    </th>

    <th>
      Nickname
    </th>

    <th>
      Country of origin
    </th>

    <th>
      Category
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @contacts.each do |contact| %>
  <tr>
    <td>
      <%= contact.id %>
    </td>

    <td>
      <%= contact.user_id %>
    </td>

    <td>
      <%= contact.main_contact %>
    </td>

    <td>
      <%= contact.city %>
    </td>

    <td>
      <%= contact.job %>
    </td>

    <td>
      <%= contact.birthday %>
    </td>

    <td>
      <%= contact.note %>
    </td>

    <td>
      <%= contact.name %>
    </td>

    <td>
      <%= contact.last_name %>
    </td>

    <td>
      <%= contact.nickname %>
    </td>

    <td>
      <%= contact.country_of_origin %>
    </td>

    <td>
      <%= contact.category_id %>
    </td>

    <td>
      <%= time_ago_in_words(contact.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(contact.updated_at) %> ago
    </td>

    <td>
      <a href="/contacts/<%= contact.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
