<h1>
  Add a new interaction - <%= @contact.name %> <%= @contact.last_name %>
</h1>


<hr>

<%= render("interaction_templates/validation_failures.html.erb") %>

<form action="/insert_interaction_record/<%= @contact.id %>" method="post">

  <div>
    <label for="details">
      Details
    </label>

    <textarea id="details" name="details"><%= @interaction.details %></textarea>
  </div>

  <div>
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" value="<%= @interaction.date %>">
  </div>

  <button>
    Create interaction
  </button>
</form>

