<!DOCTYPE html>

<head>
  <title>Interests: <%= @interest.name %></title>
</head>

<h1>
  <%= @interest.name %>
</h1>

<dl>

  <dt>
    User
  </dt>
  <dd>
    <%= @interest.user_id %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@interest.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@interest.updated_at) %> ago
  </dd>
</dl>




<div>
  <div>
    <a href="/interests">
      Go back
    </a>
  </div>

  <div>
    <a href="/existing_interest_form/<%= @interest.id %>">
      Edit interest
    </a>
  </div>

  <div>
    <a href="/delete_interest/<%= @interest.id %>">
      Delete interest
    </a>
  </div>
</div>







<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Nickname</th>
    <th>City</th>
  </tr>

  <% @contacts.order({ :last_name => :desc }).each do |contact| %>

  <tr>
    <td>
      <%= contact.name %>
    </td>
    <td>
      <%= contact.last_name %>
    </td>
    <td>
      <%= contact.nickname %>
    </td>
    <td>
      <%= contact.city %>
    </td>
  </tr>
  <% end %>
</table>