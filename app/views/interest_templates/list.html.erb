<h1>
  Interest list
</h1>

<a href="/new_interest_form">
  Add a new interest
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      User
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @interests.each do |interest| %>
  <tr>
    <td>
      <%= interest.id %>
    </td>

    <td>
      <%= interest.name %>
    </td>

    <td>
      <%= interest.user_id %>
    </td>

    <td>
      <%= time_ago_in_words(interest.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(interest.updated_at) %> ago
    </td>

    <td>
      <a href="/interests/<%= interest.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
