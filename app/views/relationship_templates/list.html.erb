<h1>
  Relationship list
</h1>

<a href="/new_relationship_form">
  Add a new relationship
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Owner
    </th>

    <th>
      Relative
    </th>

    <th>
      Nature
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @relationships.each do |relationship| %>
  <tr>
    <td>
      <%= relationship.id %>
    </td>

    <td>
      <%= relationship.owner_id %>
    </td>

    <td>
      <%= relationship.relative_id %>
    </td>

    <td>
      <%= relationship.nature %>
    </td>

    <td>
      <%= time_ago_in_words(relationship.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(relationship.updated_at) %> ago
    </td>

    <td>
      <a href="/relationships/<%= relationship.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
